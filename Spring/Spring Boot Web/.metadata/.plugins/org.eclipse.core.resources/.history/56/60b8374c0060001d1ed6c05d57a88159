	pageEncoding="ISO-8859-1"%>
<%@ page import="java.util.List, com.epam.entity.Quiz"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
	You are on quiz operating page
	<from action="/admin/showquiz"> Enter quiz id : <input
		name="quizid" /> <input type="submit" value="Operate" /> <br />

	<%
	List<Quiz> quizList = (List<Quiz>) request.getAttribute("quizList");

	if (quizList.isEmpty()) {
	%>
	<div>No quiz available !</div>
	<%
	} else {
	for (Quiz quiz : quizList) {
	%>
	<div>
		<span><%=quiz.getId()%>. </span><span><%=quiz.getQuizTitle()%></span>
	</div>
	<%
	}
	}
	%> </from>
